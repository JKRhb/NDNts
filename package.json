{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "bootstrap": "npx pnpm install -r && node mk/update-tsconfig-paths.js",
    "build": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json",
    "clean": "rm -rf packages/*/lib/",
    "cover": "jest --coverage",
    "lint": "tslint --fix -p .",
    "preinstall": "node mk/only-allow-pnpm.js",
    "prod-build": "npm run prod-build-d && npm run prod-build-js",
    "prod-build-d": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json -d",
    "prod-build-js": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json --removeComments true",
    "publish": "npm run prod-build && lerna publish --no-push",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "expect": "^24.9.0",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "pnpm": "^3.8.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.1.0",
    "tslint": "^5.20.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.6.2",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.6"
  }
}
