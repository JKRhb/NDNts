{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs clang-format-11 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@8.3.1",
  "devDependencies": {
    "@types/node": "^18.16.2",
    "@types/wtfnode": "^0.7.0",
    "@typescript/lib-dom": "npm:@types/web@0.0.99",
    "@vitest/coverage-c8": "^0.30.1",
    "@yoursunny/xo-config": "0.53.1",
    "c8": "^7.13.0",
    "codedown": "^2.2.0",
    "tslib": "^2.5.0",
    "typedoc": "^0.24.6",
    "typescript": "~5.0.4",
    "vitest": "^0.30.1",
    "wtfnode": "^0.9.1"
  },
  "engines": {
    "node": "^16.19.0 || ^18.13.0 || ^19.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@types/yargs"
      ]
    }
  }
}
