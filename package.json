{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "bootstrap": "npx pnpm install -r && node mk/update-tsconfig-paths.js",
    "build": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json",
    "clean": "rm -rf packages/*/lib/",
    "cover": "jest --coverage",
    "lint": "tslint --fix -p .",
    "literate": "sh mk/literate-run.sh",
    "preinstall": "node mk/only-allow-pnpm.js",
    "prod-build": "npm run prod-build-d && npm run prod-build-js",
    "prod-build-d": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json -d",
    "prod-build-js": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json --removeComments true",
    "publish": "npm run prod-build && lerna publish --no-push",
    "test": "jest"
  },
  "devDependencies": {
    "@types/expect-puppeteer": "^3.3.1",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.18",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/node": "^12.7.4",
    "@types/puppeteer": "^1.3.0",
    "@types/webpack": "^4.39.1",
    "@types/webpack-dev-server": "^3.1.7",
    "codedown": "^2.1.6",
    "expect": "^24.9.0",
    "expect-puppeteer": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-environment-node": "^24.8.0",
    "jest-environment-puppeteer": "^4.3.0",
    "jest-puppeteer": "^4.3.0",
    "lerna": "^3.16.4",
    "pnpm": "^3.8.1",
    "puppeteer": "^1.20.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "tsconfig-paths": "^3.8.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.6.2",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  }
}
