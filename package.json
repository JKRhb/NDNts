{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "bootstrap": "npx pnpm install && node mk/update-tsconfig-paths.js",
    "build": "pnpm recursive exec --filter ./packages -- tsc -p tsconfig.build.json",
    "clean": "rm -rf packages/*/lib/",
    "cover": "jest --coverage",
    "lint": "tslint --fix -p .",
    "lint-ci": "tslint -p .",
    "literate": "sh mk/literate-run.sh",
    "preinstall": "node mk/only-allow-pnpm.js",
    "prod-build": "pnpm recursive exec --filter ./packages -- bash -c \"tsc -p tsconfig.build.json -d && tsc -p tsconfig.build.json --removeComments true\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/expect-puppeteer": "^3.3.3",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.20",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/node": "^12.11.7",
    "@types/puppeteer": "1.19.1",
    "@types/webpack": "^4.39.5",
    "@types/webpack-dev-server": "^3.4.0",
    "codedown": "^2.1.6",
    "expect": "^24.9.0",
    "expect-puppeteer": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-environment-node": "^24.8.0",
    "jest-environment-puppeteer": "^4.3.0",
    "jest-puppeteer": "^4.3.0",
    "pnpm": "^4.1.6",
    "puppeteer": "^1.20.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "*",
    "tslint": "^5.20.0",
    "typescript": "^3.7.1-rc",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
