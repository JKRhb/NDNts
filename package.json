{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "node mk/update-tsconfig-paths.js && pnpm install -r",
    "build": "lerna exec -- tsc -p tsconfig.build.json",
    "build2": "lerna exec -- tsc -p tsconfig.build.json -d && lerna exec -- tsc -p tsconfig.build.json --removeComments true",
    "clean": "rm -rf packages/*/lib/",
    "cover": "jest --coverage",
    "lint": "tslint --fix -p .",
    "publish": "npm run build2 && lerna publish --no-push",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "expect": "^24.9.0",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.0",
    "typescript": "~3.6.2"
  }
}
