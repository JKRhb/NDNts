{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "../packages",
    "baseUrl": "..",
    "paths": {
      "@ndn/*": ["./packages/*"],
      "ndn": ["./packages/ndn"]
    }
  },
  "include": [
    "../packages/*/src/**/*"
  ],
  "typedocOptions": {
    "entryPointStrategy": "packages",
    "exclude": ["**/node_modules", "**/lib", "**/test-fixture", "**/tests"],
    "excludeExternals": true,
    "excludePrivate": true,
    "externalModuleMap": "packages/([^/]+)/.*",
    "name": "NDNts",
    "out": "../docs/typedoc",
    "plugin": ["@mshipov/typedoc-plugin-monorepo"],
    "readme": "./typedoc-README.md"
  }
}
