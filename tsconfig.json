{
  "extends": "./mk/tsconfig-paths.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2019",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "**/node_modules"
  ]
}
