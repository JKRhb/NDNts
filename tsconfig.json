{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/tests"
  ]
}
